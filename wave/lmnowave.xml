<?xml version="1.0" encoding="UTF-8" ?>

<Module>
  <ModulePrefs
    title="lmnopuz"
    title_url="http://danvk.org/"
    author="Dan Vanderkam"
    author_email="danvdk@gmail.com"
    description="Solve crossword puzzles with friends in Google Plus"
    >
    <!--
    width="800"
    height="375"
    thumbnail="http://danvk.org/lmnowave/thumbnail_120.png"
    screenshot="http://danvk.org/lmnowave/screenshot.png"
    -->
   <Require feature="rpc"/>
   <!-- <Require feature="wave" /> -->
   <!-- <Require feature="dynamic-height" /> -->
  </ModulePrefs>

  <Content type="html">
  <![CDATA[
<html>
  <link rel="stylesheet" type="text/css" href="https://raw.github.com/danvk/lmnowave/master/wave/crossword.css"/>
<style type='text/css'>
body {
  margin: 0ex 1ex;
}
body, td, input {
  font-family: serif;
}

h3 {
  font-size: 100%;
  margin: 0;
}
</style>

<script src="https://raw.github.com/danvk/lmnowave/master/wave/common.js"></script>
<script src="https://raw.github.com/danvk/lmnowave/master/wave/console.js"></script>
<script src="https://raw.github.com/danvk/lmnowave/master/wave/crosswordui.js"></script>
<script src="https://raw.github.com/danvk/lmnowave/master/wave/cluesui.js"></script>
<script src="https://raw.github.com/danvk/lmnowave/master/wave/focusbox.js"></script>
<script src="https://raw.github.com/danvk/lmnowave/master/wave/color.js"></script>
<script src="https://raw.github.com/danvk/lmnowave/master/wave/puzparser.js"></script>
<script src="https://raw.github.com/danvk/lmnowave/master/wave/lmnowave.js"></script>
<script src="https://raw.github.com/danvk/lmnowave/master/wave/builtins.js"></script>
<script src="https://raw.github.com/danvk/lmnowave/master/wave/roster.js"></script>

<script src="https://hangoutsapi.talkgadget.google.com/hangouts/api/hangout.js?v=1.0" ></script>

<body>

<div class="centering-outer">
<div class="centering-middle">
<div class="centering-inner">

<div id="upload" style="display:none">
  <div id="upload_supported" style="display:none;">
    <div id="upload-interface">
      <div id="dropbox" class="dropbox" >
        <img src="../wave/thumbnail_120.png" />
        <p><b>Drag a .puz file here to start playing.</b></p>
      </div>
      <p id="file-chooser">Or choose a file:
        <input type="file" id="puz" onchange="addPuzToWave(this.files)" />
      </p>
    </div>

    <p>You can find links to many .puz files <a
    href="http://www.fleetingimage.com/wij/xyzzy/nyt-links.html">here</a>.
    <br/>Or, try one of these puzzles from the <a
    href="http://www.avclub.com/">A.V. Club</a>:</p>
  </div>

  <div id="upload_unsupported" style="display:none;">
    <table><tr>
    <td valign="top">
      <img src="..//wave/thumbnail_120.png" />
    </td><td valign="middle">
      <p><b>Your browser does not support puzzle upload.</b></p>
      <p>Try loading this wave in a browser that does, such as <a
      href="http://www.mozilla.com/firefox/" target="_blank">Firefox</a> or
      <a href="https://www.google.com/chrome">Chrome</a>.<br/>
      Or, try one of these puzzles from the <a
      href="http://www.avclub.com/">A.V. Club</a>:</p>
    </td>
    </tr></table>
  </div>

  <div id="builtins">
  </div>

  <script type="text/javascript">
  for (var i = 0; i < Builtins.length; i++) {
    var p = Builtins[i];
    var str = '<a href="javascript:setBuiltInPuz(' + i + ')"><img src="../wave/puzzle_16.png" />' + p['title'] + '</a>&nbsp; (by ' + p['author'] + '; <a href="' + p['link'] + '">original</a>)<br/>';
    document.getElementById("builtins").innerHTML += str;
  }

  function setBuiltInPuz(i) {
    gapi.hangout.data.submitDelta({'crossword': Builtins[i].data});
  }
  </script>
</div>

<!-- do onblur and onfocus mean anything to a table? -->
<div id="crossword_container" style="display:none">

<table cellspacing='0' cellpadding='0' id='toptable' >
  <tr valign="top">
  <td>&nbsp;</td>
  <td colspan=2>
    <table id="puzzle_info" width="100%"><tr>
      <td id="title"></td>
      <td id="author"></td>
      <td id="copyright"></td>
    </tr></table>
  </td>
  </tr>

  <tr valign='top'>
    <td><div id='roster'></div></td>
    <td>
      <div id='current_clue'></div>
      <div id='crossword' style='margin-right: 2ex'></div>
    </td>
    <td><div id='clues'></div></td>
  </tr>
</table>

</div>  <!-- #crossword_outer -->

<div style="display:none;">
<table cellspacing='0' cellpadding='0' style='padding-top: 1ex' id='bottomtable'>
  <tr valign='top'>
    <td style='width:100%'><div id='console'></div></td>
  </tr>
</table>
</div>

</div>  <!-- .centering-inner -->
</div>  <!-- .centering-middle -->
</div>  <!-- .centering-outer -->

<script type="text/javascript">
  gadgets.util.registerOnLoadHandler(function() {
    gapi.hangout.onApiReady.add(
      function(eventObj) {
        if (eventObj.isApiReady) {
          realInit();
        }
      }
    );
  });

  function realInit() {
    console.log('in realInit');
    gapi.hangout.data.onStateChanged.add(stateUpdated);
    gapi.hangout.onEnabledParticipantsChanged.add(usersChanged);
    setHeight();
    stateUpdated();  // initialize state
  }

  // Set up the drag-and-drop interface.
  if (supportsUpload()) {
    var dropbox = document.getElementById("dropbox");
    var stop = function(e) { e.stopPropagation(); e.preventDefault(); };
    dropbox.addEventListener("dragenter", stop, false);
    dropbox.addEventListener("dragover", stop, false);
    dropbox.addEventListener("drop", function(e) {
      stop(e);
      addPuzToWave(e.dataTransfer.files);
    }, false);
    $('upload_supported').style.display = 'block';
  } else {
    $('upload_unsupported').style.display = 'block';
  }
</script>


</body>
  ]]>
  </Content>
</Module>
